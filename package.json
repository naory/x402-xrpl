{
  "name": "x402-xrpl-settlement-adapter",
  "version": "0.1.4",
  "private": false,
  "description": "TypeScript x402 v2 settlement adapter for XRPL: issue challenges, build payment memos, verify on-ledger settlement, replay-safe.",
  "license": "MIT",
  "keywords": [
    "x402",
    "x402 v2",
    "xrpl",
    "xrp",
    "rlusd",
    "http-402",
    "payment-required",
    "settlement",
    "verification",
    "verifier",
    "server",
    "middleware",
    "replay-protection",
    "receipt"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/naory/x402-xrpl.git"
  },
  "bugs": {
    "url": "https://github.com/naory/x402-xrpl/issues"
  },
  "homepage": "https://github.com/naory/x402-xrpl#readme",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "docs",
    "README.md",
    "LICENSE",
    "CONFORMANCE.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/index.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "tsx --test test/**/*.test.ts",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "tsx": "^4.21.0",
    "typescript": "^5.4.0"
  }
}
